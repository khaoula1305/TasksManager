@page "/task-sub-points"
@attribute [Authorize]

<PageTitle>TaskSubPoints</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="TaskSubPoints" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@taskSubPoints" LoadData="@Grid0LoadData" Count="@count" TItem="TaskManager.Server.Models.TaskManagerDb.TaskSubPoint" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="TaskManager.Server.Models.TaskManagerDb.TaskSubPoint" Property="SubPointID" Title="Sub Point I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TaskManager.Server.Models.TaskManagerDb.TaskSubPoint" Property="Description" Title="Description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TaskManager.Server.Models.TaskManagerDb.TaskSubPoint" Property="Status" Title="Status">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TaskManager.Server.Models.TaskManagerDb.TaskSubPoint" Property="Task.Title" Title="Task">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TaskManager.Server.Models.TaskManagerDb.TaskSubPoint" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="taskSubPoint">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, taskSubPoint)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
